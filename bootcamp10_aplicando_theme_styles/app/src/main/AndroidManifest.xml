<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bootcamp9_menu_testing"
        tools:targetApi="31">
        <!--
            Define uma Activity que utiliza um estilo (theme) personalizado.
            Isso permite que apenas esta Activity use cores, layouts ou comportamentos visuais
            diferentes do restante da aplicação. -->

        <!-- Aplica o tema personalizado definido em res/values/styles.xml -->
        <!-- Nome completo (com prefixo do pacote) da Activity -->
        <!-- Indica que a Activity não pode ser acessada por outros apps -->
        <activity
            android:theme="@style/MyStyle"
        android:name=".TestandoMeuStyleActivity"
        android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>