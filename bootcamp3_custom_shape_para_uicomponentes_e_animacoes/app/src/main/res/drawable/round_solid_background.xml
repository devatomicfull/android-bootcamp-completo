<?xml version="1.0" encoding="utf-8"?>
<!-- Drawable de forma oval com cor de fundo, borda e padding -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval"> <!-- Define a forma como oval (círculo ou elipse) -->

    <!-- Define o tamanho fixo da forma -->
    <size android:width="100dp" /> <!-- Largura da forma oval (a altura será definida por quem usa o drawable) -->

    <!-- Cor de preenchimento (fundo) da forma -->
    <solid android:color="@color/abacate" />

    <!-- Espaçamento interno entre a borda da forma e seu conteúdo (caso tenha conteúdo como ícones, texto etc.) -->
    <padding
        android:top="22dp"
        android:left="22dp"
        android:right="22dp"
        android:bottom="22dp" />

    <!-- Borda da forma -->
    <!-- Cor da borda -->
    <!-- Espessura da borda -->
    <stroke
        android:color="@color/black"
    android:width="8dp" />

</shape>
